  "components": {
    "schemas": {
      "Employee": {
        "required": [
          "dateOfJoining",
          "email",
          "name",
          "phoneNumber"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "maxLength": 100,
            "minLength": 2,
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "isActive": {
            "type": "boolean"
          },
          "dateOfJoining": {
            "type": "string",
            "format": "date-time"
          },
          "salary": {
            "maximum": 9999999999.99,
            "minimum": 0,
            "type": "number",
            "format": "double"
          },
          "phoneNumber": {
            "maximum": 9999999999,
            "minimum": 1000000000,
            "type": "integer",
            "format": "int64"
          }
        },
        "additionalProperties": false
      },
      "LoginRequest": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "User": {
        "required": [
